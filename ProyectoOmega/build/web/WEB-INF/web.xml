<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
     <servlet>
        <servlet-name>Follow</servlet-name>
        <servlet-class>dbservlets.Follow</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetFollowers</servlet-name>
        <servlet-class>dbservlets.GetFollowers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetFollowing</servlet-name>
        <servlet-class>dbservlets.GetFollowing</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetMessages</servlet-name>
        <servlet-class>dbservlets.GetMessages</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>dbservlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>dbservlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostMessage</servlet-name>
        <servlet-class>dbservlets.PostMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchUsers</servlet-name>
        <servlet-class>dbservlets.SearchUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Unfollow</servlet-name>
        <servlet-class>dbservlets.Unfollow</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Follow</servlet-name>
        <url-pattern>/Follow</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetFollowers</servlet-name>
        <url-pattern>/GetFollowers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetFollowing</servlet-name>
        <url-pattern>/GetFollowing</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetMessages</servlet-name>
        <url-pattern>/GetMessages</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostMessage</servlet-name>
        <url-pattern>/PostMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchUsers</servlet-name>
        <url-pattern>/SearchUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Unfollow</servlet-name>
        <url-pattern>/Unfollow</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
